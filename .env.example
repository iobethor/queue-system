# Основные настройки приложения
NODE_ENV=development
PORT=5000

# База данных PostgreSQL (локальная)
DATABASE_URL=postgresql://admin:admin@localhost:5432/qs
PGHOST=localhost
PGPORT=5432
PGDATABASE=qs
PGUSER=admin
PGPASSWORD=admin

# Настройки Ollama (локальная нейросеть)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3:8b

# Настройки безопасности
SESSION_SECRET=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production

# Настройки уведомлений (опционально)
SMS_API_KEY=your-sms-api-key
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# Настройки системы очередей
MAX_DAILY_APPOINTMENTS=50
DEFAULT_APPOINTMENT_DURATION=15
VOICE_ANNOUNCEMENT=true
AI_TEMPERATURE=0.7

# Рабочие часы
WORKING_HOURS_START=09:00
WORKING_HOURS_END=18:00

# Настройки WebSocket
WS_RECONNECT_ATTEMPTS=5
WS_PING_INTERVAL=30000

# Настройки логирования
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Настройки файлов (если нужны)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# CORS настройки (для разработки)
CORS_ORIGIN=http://localhost:5000

# Дополнительные настройки для продакшена
# В продакшене обязательно измените все секретные ключи!
# Также настройте SSL/TLS сертификаты для HTTPS

# Пример подключения к внешней PostgreSQL (если не локальная)
# DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Настройки мониторинга (опционально)
SENTRY_DSN=your-sentry-dsn-here
ANALYTICS_ID=your-analytics-id-here

# Настройки резервного копирования
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Настройки кэширования (Redis, если используется)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# Настройки производительности
MAX_CONNECTIONS=100
QUERY_TIMEOUT=30000
CONNECTION_TIMEOUT=10000

# Настройки локализации
DEFAULT_LOCALE=ru-RU
TIMEZONE=Europe/Moscow

# Настройки отладки (только для разработки)
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_SQL_LOGGING=false
